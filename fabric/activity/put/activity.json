{
    "name": "fabric-put",
    "version": "1.0.0",
    "type": "flogo:activity",
    "title": "Fabric Put",
    "author": "TIBCO Software Inc.",
    "display": {
        "category": "fabric",
        "visible": true,
        "smallIcon": "ic-put.png",
        "description": "This activity stores data to fabric ledger"
    },
    "ref": "github.com/yxuco/flogo-enterprise-app/fabric/activity/put",
    "homepage": "http://github.com/yxuco/flogo-enterprise-app/fabric/activity/put",
    "inputs": [
        {
            "name": "key",
            "type": "string",
            "required": true
        },
        {
            "name": "valueType",
            "type": "string",
            "required": true,
            "allowed": [
                "string",
                "number",
                "integer",
                "boolean",
                "object"
            ],
            "value": "string",
            "display": {
                "name": "Data type",
                "description": "Type of state data for the key",
                "type": "dropdown",
                "selection": "single"
            }
        },
        {
            "name": "value",
            "type": "any"
        },
        {
            "name": "data",
            "type": "complex_object",
            "display": {
                "name": "Value object definition",
                "description": "Schema definition of complex state data, e.g.,\r\n{\r\n  \"param1\": \"string\",\r\n  \"param2\": {\"field1\": 0}\r\n}",
                "type": "texteditor",
                "syntax": "json",
                "mappable": true
            }
        },
        {
            "name": "isPrivate",
            "type": "boolean",
            "required": true,
            "display": {
                "name": "Data is private",
                "description": "Put data in private collection"
            },
            "value": false
        },
        {
            "name": "collection",
            "type": "string",
            "display": {
                "name": "Private collection name",
                "description": "Name of the default private collection",
                "visible": false,
                "mappable": true
            }
        },
        {
            "name": "compositeKeys",
            "type": "string",
            "display": {
                "name": "Composite keys",
                "description": "Define search index using composite key name and attributes, e.g. {\r\n    \"index-color\": [\"color\", \"name\"],\r\n    \"index-owner\": [\"owner\", \"name\"]\r\n}",
                "type": "texteditor",
                "syntax": "json"
            }
        }
    ],
    "outputs": [
        {
            "name": "code",
            "type": "integer"
        },
        {
            "name": "message",
            "type": "string"
        },
        {
            "name": "result",
            "type": "complex_object"
        }
    ]
}
