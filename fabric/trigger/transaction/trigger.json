{
    "name": "fabric-transaction",
    "version": "1.0.0",
    "type": "flogo:trigger",
    "title": "Hyperledger Fabric Transaction",
    "author": "TIBCO Software Inc.",
    "display": {
        "category": "fabric",
        "description": "This trigger executes a Fabric transaction",
        "visible": true,
        "smallIcon": "icons/ic-fabric.png",
        "largeIcon": "icons/ic-fabric@2x.png",
        "wizard": ["Step 1", "Step 2"]
    },
    "ref": "github.com/yxuco/flogo-enterprise-app/fabric/trigger/transaction",
    "homepage": "http://github.com/yxuco/flogo-enterprise-app/fabric/trigger/transaction",
    "settings": [],
    "handler": {
        "settings": [{
            "name": "name",
            "type": "string",
            "required": true,
            "display": {
                "name": "Transaction name",
                "description": "Name of the transaction for Hyperledger Fabric contract"
            },
            "wizard": {
                "name": "Transaction name",
                "type": "string",
                "step": "Step 1"
            }
        },
        {
            "name": "validation",
            "type": "boolean",
            "required": false,
            "display": {
                "description": "Selection for output validation, default false",
                "name": "Output Validation",
                "appPropertySupport": true
            },
            "value": false
        }]
    },
    "outputs": [
        {
            "name": "parameters",
            "type": "complex_object",
            "required": true,
            "display": {
                "name": "Parameter names and schema",
                "description": "definition of input parameters, optionally wrap transient attributes using parameter name 'transient', e.g.,\r\n{\r\n  \"param1\": \"string\",\r\n  \"param2\": {\"field1\": 0},\r\n  \"transient\": {\"trans1\": \"\"}\r\n}",
                "type": "texteditor",
                "syntax": "json"
            },
            "wizard": {
                "name": "Parameter names and schema",
                "type": "texteditor",
                "syntax": "json",
                "step": "Step 1"
            }
        },
        {
            "name": "txID",
            "type": "string"
        },
        {
            "name": "txTime",
            "type": "string"
        },
        {
            "name": "_chaincode_stub",
            "type": "any",
            "display": {
                "description": "Internal use to cache chaincode stub",
                "visible": false
            }
        }
    ],
    "reply": [{
        "name": "returns",
        "type": "complex_object",
        "display": {
            "name": "Returned attributes and schema",
            "description": "e.g.,\r\n{\r\n  \"attr1\": \"string\",\r\n  \"attr2\": {\"field1\": 0}\r\n}",
            "type": "texteditor",
            "syntax": "json",
            "mappable": true
        },
        "wizard": {
            "name": "Returned attributes and schema",
            "type": "texteditor",
            "syntax": "json",
            "step": "Step 2"
        }
    }],
    "actions": [{
        "name": "Finish"
    }]
}
